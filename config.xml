<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "br.cemig.ras_2104_en"
        versionCode = "3" 
        version     = "1.2" >


    <name>ASR Cemig</name>

    <description>
        ASR CEMIG 2014
    </description>

    <author href="http://www.prefil252.com" email="">
        Perfil 252
    </author>

    <icon src="icon.png" />

    <!-- iPhone / iPod Touch  -->
    <icon src="icones/icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="icones/icon-60@2x.png" gap:platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="icones/icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="icones/icon-76@2x.png" gap:platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="icones/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="icones/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="icones/icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="icones/icon-40@2x.png" gap:platform="ios" width="80" height="80" />

    <!-- iPhone / iPod Touch -->
    <icon src="icones/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="icones/icon@2x.png" gap:platform="ios" width="114" height="114" />

    <!-- iPad -->
    <icon src="icones/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icones/icon-72@2x.png" gap:platform="ios" width="144" height="144" />

    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="icones/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="icones/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- iPad Spotlight and Settings Icon -->
    <icon src="icones/icon-50.png" gap:platform="ios" width="50" height="50" />
    <icon src="icones/icon-50@2x.png" gap:platform="ios" width="100" height="100" />

    

    <!-- iPhone and iPod touch -->
    <gap:splash src="splash/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="splash/Default@2x.png" gap:platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash src="splash/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

    <!-- iPhone 6 -->
    <gap:splash src="splash/Default-667h@2x.png" gap:platform="ios" width="750" height="1334" />
    <gap:splash src="splash/Default-Portrait-736h@3x.png" gap:platform="ios" width="1242" height="2208" />
    <gap:splash src="splash/Default-Landscape-736h@3x.png" gap:platform="ios" width="2208" height="1242" />

    <!-- iPad -->
    <gap:splash src="splash/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="splash/Default-Landscape.png" gap:platform="ios" width="1024" height="768" />

    <!-- Retina iPad -->
    <gap:splash src="splash/Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="splash/Default-Landscape@2x.png" gap:platform="ios" width="2048" height="1536" />



    <preference name="orientation" value="landscape" />
    <preference name="prerendered-icon" value="true" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <gap:plugin name="com.jaeger.html5video" version="1.2.1" />

    <preference name="DisallowOverscroll" value="true" />
    <preference name="webviewbounce" value="false" />

    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
    <preference name="StatusBarBackgroundColor" value="#000000" />

    <preference name="permissions" value="none"/>
    <feature name="http://api.phonegap.com/1.0/network"/>

    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />


</widget>