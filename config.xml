<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "br.cemig.ras_2104_en"
        versionCode = "1" 
        version     = "1.0" >


    <name>ASR Cemig</name>

    <description>
        ASR CEMIG 2014
    </description>

    <author href="http://www.prefil252.com" email="">
        Perfil 252
    </author>

    <preference name="phonegap-version" value="3.5.0" />

    <icon src="icon.png" />

    <!-- iPhone / iPod Touch  -->
    <icon src="icones/icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="icones/icon-60@2x.png" gap:platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="icones/icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="icones/icon-76@2x.png" gap:platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="icones/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="icones/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="icones/icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="icones/icon-40@2x.png" gap:platform="ios" width="80" height="80" />

    <!-- iPhone / iPod Touch -->
    <icon src="icones/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="icones/icon@2x.png" gap:platform="ios" width="114" height="114" />

    <!-- iPad -->
    <icon src="icones/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icones/icon-72@2x.png" gap:platform="ios" width="144" height="144" />

    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="icones/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="icones/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- iPad Spotlight and Settings Icon -->
    <icon src="icones/icon-50.png" gap:platform="ios" width="50" height="50" />
    <icon src="icones/icon-50@2x.png" gap:platform="ios" width="100" height="100" />

    <preference name="orientation" value="landscape" />
    <preference name="prerendered-icon" value="true" />
    <!-- <preference name="AllowInlineMediaPlayback" value="true" /> -->
    <gap:plugin name="com.jaeger.html5video" version="1.2.1" />

    <preference name="DisallowOverscroll" value="true" />
    <preference name="webviewbounce" value="false" />

    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
    <preference name="StatusBarBackgroundColor" value="#000000" />

    <preference name="permissions" value="none"/>
    <feature name="http://api.phonegap.com/1.0/network"/>

    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />


</widget>